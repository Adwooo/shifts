<% title "User Profile Entries" %>

<% @user_profile_fields.each do |profile_field| %>
    <% profile_field.name %>
  <table>
    <tr>
      <th>User</th>
      <th>Contents</th>
    </tr>
    <% UserProfileEntry.find(:all, :conditions => {:user_profile_field_id => profile_field.id}).each do |profile_entry| %>
      <tr>
        <td><%=h User.find(profile_entry.user_id).proper_name %>
        <td><%= profile_entry.content %>
      </tr>
    <% end %>
  </table>
<% end %>
<p><%= link_to "New User Profile Entry", new_user_profile_entry_path %></p>

