<% content_for :head do %>
  <% stylesheet 'report'%>
	<%= javascript_include_tag :defaults %>
<% end %>

<table class="tablesorter">
	<thead>
		<tr>
		 <th colspan=4>Recent Shifts at the <%= @location.name %></th>
		</tr>
	</thead>
	<tbody id="shift_history">
		<%= render :partial => 'shift_history' %>
	</tbody>
</table>

<% form_remote_tag :url => { :action => :display_shift_history, :id => @location.id, :more_items => true } do %>
	<%= submit_tag "Display More" %>
<% end %>