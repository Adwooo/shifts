<% content_for :head do %>
  <% stylesheet 'shift', 'timeline'%>
  <% javascript 'sorttable' %>
<% end %>

<% if current_user.is_admin_of?(current_department) %>
<%# Admin Menu %>
  <% content_for :left_nav do %>
  	<ul id="navigationList" class="sf-menu sf-vertical">
			<li class="current">
				<li>
		      <a class="sf-with-ul" href="#">Schedule<span class="sf-sub-indicator"> &#187;</span></a>
						<ul>
			        <li><%= link_to_unless_current "Shift Schedule", shifts_path %></li>
			        <li><%= link_to_unless_current "Active Shifts", show_active_shifts_path %></li>
			        <li><%= link_to_unless_current "Sub Requests", sub_requests_path %></li>
			        <li><%= link_to_unless_current "Calendars", calendars_path %></li>
			        <li><%= link_to_unless_current "Time Slots", time_slots_path %></li>
			        <li><%= link_to_unless_current "Tasks", tasks_path %></li>
						</ul>
				</li>
				<li>
		      <a class="sf-with-ul" href="#">Locations<span class="sf-sub-indicator"> &#187;</span></a>
						<ul>
			        <li><%= link_to_unless_current "Locations", department_locations_path(@department) %></li>
			        <li><%= link_to_unless_current "Location Groups", department_loc_groups_path(@department) %></li>
						</ul>
				</li>
				<li>
		      <a class="sf-with-ul" href="#">Data<span class="sf-sub-indicator"> &#187;</span></a>
						<ul>
			        <li><%= link_to_unless_current "Data Objects", data_objects_path %></li>
			        <li><%= link_to_unless_current "Data Types", data_types_path %></li>
						</ul>
				</li>
				<li>
			    <a class="sf-with-ul" href="#">Notices<span class="sf-sub-indicator"> &#187;</span></a>
