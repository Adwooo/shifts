    <!-- Main Content -->

    <%- if show_title? -%>
      <h1 id="page_title"><%=h yield(:title) %></h1>
    <%- end -%>
    <!-- Main Content -->
    <%= yield(:body) || yield %>     
    </div>
    <div id="pageAnchor">
      <a href="#top_of_page">
        <%= image_tag "jump.gif", {:hspace => "0", :height => "13", :border => "0", :width => "19", :alt => "Jump to top", :title => "Jump to top"} %>
