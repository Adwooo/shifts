<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
  <head>
    <title><%= h(yield(:title) || "Untitled") %></title>
    <%= stylesheet_link_tag 'application', 'nav' %>
    <%= javascript_include_tag :defaults %>
    <%= yield(:head) %>
  </head>
  <body>

    <%= render :partial => 'layouts/nav_top' %>
	  <% if current_user %>
	    <%= render :partial => "layouts/chooser" %>
	    <div id="login">
		  Hello <%= current_user.name %>! (NetID: <%= current_user.login %>) <%= link_to "[Logout]", :controller => "sessions", :action => "logout" %>
	  	</div>
	  <% end %>

    <div id="container">
      <%- flash.each do |name, msg| -%>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <%- end -%>

      <%- if show_title? -%>
        <h1><%=h yield(:title) %></h1>
      <%- end -%>
      <%= yield(:my_content) || yield %>
    </div>
  </body>
</html>

