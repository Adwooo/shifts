<div id="login">
  <p class="login_status">
    You are currently logged in as <strong><%= current_user ? current_user.login : session[:cas_user] %>
    <% if @user_session %>
    <%= link_to "[Logout]", logout_path %>
    <% else %>
    <%= link_to "[Logout]", :controller => "sessions", :action => "logout" %>
    <% end %>
    </strong>
  </p>
</div>

