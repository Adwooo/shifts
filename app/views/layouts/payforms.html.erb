<% content_for :head do %>
  <%= javascript 'jquery', 'jquery-ui', 'jrails' %>
  <%= stylesheet 'thickbox', 'payforms' %>

<% end %>


<% if current_user.is_admin_of?(current_department) %>
  <% content_for :left_nav do %>
      <ul id="navigationList">
        <li><h3>Payform Admin</h3></li>
        <li>
          <%= link_to_unless_current "View Payforms", payforms_path %>
          <ul>
            <li><%= link_to_unless_current "Submitted", payforms_path(:submitted => true)%></li>
            <li><%= link_to_unless_current "Approved", payforms_path(:approved => true)%></li>
            <li><%= link_to_unless_current "Printed", payforms_path(:printed => true) %></li>
          </ul>
        </li>
        <li><%= link_to_unless_current "Print History", payform_sets_path %></li>
        <li><%= link_to_unless_current "Mass Add Jobs", new_payform_item_set_path %>
          <ul>
            <li><%= link_to_unless_current "View Mass Jobs", payform_item_sets_path %></li>
          </ul>
        </li>
        <li><%= link_to_unless_current "Punch Clocks", punch_clocks_path %>
              <ul>
                <li><%= link_to_unless_current "Mass Punch Clocks", punch_clock_sets_path %></li>
              </ul>
          </li>

        <li><%= link_to_unless_current "E-mail Reminders", email_reminders_path %></li>
        <li><%= link_to_unless_current "Edit Categories", department_categories_path(current_department) %></li>
        <li><%= link_to_unless_current "Edit Configurations", edit_department_config_path(@department.department_config) %></li>
      </ul>
    <div id="contentNav">
  <% end %>
<% end %>

<% content_for :body do %>

  <%= yield %>

<% end %>

<%= render :file => "layouts/application.html.erb" %>

