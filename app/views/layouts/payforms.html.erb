<% content_for :head do %>
  <%= javascript 'jquery', 'jquery-ui', 'jrails' %>
  <%= stylesheet 'thickbox', 'payforms' %>

<% end %>


<% if current_user.is_admin_of?(current_department) %>
  <% content_for :left_nav do %>
      <ul id="navigationList">
        <h3>View</h3>
            <li><%= link_to_unless_current "All Payforms", payforms_path %></li>
            <li><%= link_to_unless_current "Submitted Payforms", payforms_path(:submitted => true)%></li>
            <li><%= link_to_unless_current "Approved Payforms", payforms_path(:approved => true)%></li>
            <li><%= link_to_unless_current "Printed Payfroms", payforms_path(:printed => true) %></li>
            <li><%= link_to_unless_current "Mass Jobs", payform_item_sets_path %></li>
            <li><%= link_to_unless_current "Punch Clocks", punch_clocks_path %></li>
            <li><%= link_to_unless_current "Mass Punch Clocks", punch_clock_sets_path %></li>
            <li><%= link_to_unless_current "Print History", payform_sets_path %></li>
            <p></p>
        <h3>Add</h3>
        <li><%= link_to_unless_current "Mass Jobs", new_payform_item_set_path %></li>
        <li><%= link_to_unless_current "Mass Punch Clocks", new_punch_clock_set_path %></li>        <p></p>
        <h3>Edit</h3>
        <li><%= link_to_unless_current "E-mail Reminders", email_reminders_path %></li>
        <li><%= link_to_unless_current "Categories", department_categories_path(current_department) %></li>
      </ul>
    <div id="contentNav">
  <% end %>
<% end %>

<% content_for :body do %>

  <%= yield %>

<% end %>

