<% form_for [@department, @role] do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <ul>
  <% for lg in @loc_groups -%>
      <li><%= lg.name %></li>
      <ul>
        <% for perm in lg.permissions -%>
          <li><%= perm.name %></li>
        <% end -%>
      </ul>
  <% end -%>
  </ul>
  <p><%= f.submit "Submit" %></p>
<% end %>

