<legend>Shift Tasks</legend>

<% @tasks.each do |task| %>
	<li>
		<% if task.done %>
		<strike><%= "#{task.name}" %></strike>
		<% elsif task.missed %>
		  <h3> <%= link_to_remote (task.needs_doing ? "#{task.name} - Needs Doing ASAP!" : "#{task.name}"), :url => { :controller => "tasks", :action => 'make_entry', "task_ids[]" => task.id} %></h3>
		<% else %>
			<%= link_to_remote (task.needs_doing ? "#{task.name} - Needs Doing!" : "#{task.name}"), :url => { :controller => "tasks", :action => 'make_entry', "task_ids[]" => task.id} %>
		<% end %>
	</li>
<% end %>