<% if @shifts_tasks.empty? %>
	<tr>
		<td colspan=5>There are no task records.</td>
	</tr>
<% else %>
	<% @shifts_tasks.each do |task| %>	
		<tr> 
		  <td><%=h link_to task.shift.user.name, user_path(task.shift.user)%></td>
			<td><%=h link_to task.shift.id, shift_path(task.shift)%></td>
		  <td><%=h task.created_at.strftime("%A, %B %d %Y")%></td> 
		  <td><%=h task.created_at.strftime("%I:%M %p") %></td>
	    <td><%=h task.shift.location.name %></td>
		</tr>
	<% end %>
<% end %>