<table id="tasks_records_table" class="tablesorter">
	<thead>
		<tr>
			<th>Date/Time</th>
			<th>User</th>
			<th>Shift</th>
		</tr>
	</thead>
	<tbody>
<% if @shifts_tasks.empty? %>
	<tr>
		<td colspan=4>There are no records for this task.</td>
	</tr>
<% else %>
	<% @shifts_tasks.each do |task| %>	
		<tr> 
		  <td><%=h task.created_at.strftime("%Y-%m-%d, %I:%M %p") %></td>
		  <td><%=h link_to task.shift.user.name, user_path(task.shift.user)%></td>
		  <td><%=h link_to task.shift.task_time, report_path(task.shift.report)%></td> 
		</tr>
	<% end %>
<% end %>
</tbody>
</table>
<script type="text/javascript">$(document).ready(function(){$.tablesorter.defaults.widgets = ['zebra'];$("#tasks_records_table").tablesorter({sortList: [[1,0],[0,1]]});});</script>