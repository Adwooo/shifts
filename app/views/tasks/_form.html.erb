<% form_for @task do |f| %>


<p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :kind %><br />
    <%= select_tag 'task[kind]', options_for_select(["Hourly", "Daily", "Weekly"], "Daily") %>
  </p>
  <p>
    <%= f.label :location_id, text = 'Location' %><br />
    <%= select_tag 'task[location_id]', options_from_collection_for_select(@department.locations.active, :id, :name)%><br />
  </p>
  <p>
    <%= f.label :start %><br />
	<%= f.date_select :start %>
   <%= f.time_select :start, {
                :simple_time_select => true,
                :time_separator => "",
                :minute_interval => current_department.department_config.time_increment, } %>
  </p>
  <p>
    <%= f.label :end %><br />
  	<%= f.date_select :end %>
   <%= f.time_select :end, {
                :simple_time_select => true,
                :time_separator => "",
                :minute_interval => current_department.department_config.time_increment, } %>
  </p>
  <p>
    <%= f.label :time_of_day %><br />
   <%= f.time_select :time_of_day, {
                :simple_time_select => true,
                :time_separator => "",
                :minute_interval => current_department.department_config.time_increment, } %>
  </p>
  <p>
    <%= f.label :day_in_week %><br />
    <%= select_tag 'task[day_in_week]', options_for_select(["Sun", "Mon", "Tue", "Wed", "Thu", "Fri", "Sat"], "Mon") %>
  </p>
  <p>
    <%= f.label :active %><br />
    <%= f.check_box :active %>
  </p>
  <p>
    <%= f.submit 'Submit' %>
  </p>

<% end %>