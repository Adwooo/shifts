<h1>New Punch Clock Group</h1>

<%= simple_form_for(@punch_clock_set) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.label :users %><br />
    <%= f.input :id, collection: @users_select, as: :check_boxes %>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', punch_clock_sets_path %>


