<% title "Running Punch Clocks" %>

<table>
  <tr>
    <th>Description</th>
    <th>User</th>
  </tr>
  <% for punch_clock in @punch_clocks %>
    <tr>
      <td><%=h punch_clock.description %></td>
      <td><%= punch_clock.user_id %></td>
      <td><%= link_to "Sign Out", user_punch_clocks_path(params[:user_id]), :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

