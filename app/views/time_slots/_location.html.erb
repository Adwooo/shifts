<div id="location<%= location.id %>">
  <h1><%= link_to_function location.name, "$(this).parent().next().toggle()" %></h1>
  <div>
    <div class="timeline" style="height:150px; width: 100%;">
      <div class="days">
        <div class="day" style="height: 22%;"></div>
        <%= render :partial => "left_day", :collection => @period_start...(@period_start+1.day).end_of_week %>
      </div>
      <div class="timeline-data">
        <ul class="intervals" style="height: 22%;">
          <%= render :partial => "hour", :collection =>  @dept_start_hour...@dept_end_hour %>
        </ul>
        <%= render :partial => "time_slot_day", :collection => @period_start...(@period_start+1.day).end_of_week, :locals => {:location => location}  %>
      </div>
    </div>
    
    <% unless @hidden_timeslots.empty? %>
      <h3>Hidden From <%= location.short_name %> View:</h3>
      <ul>
        <%= render :partial => "hidden_timeslot", :collection => @hidden_timeslots %>
        <div style="clear:both"></div>
      </ul>
    <% end %>
  </div>
</div>