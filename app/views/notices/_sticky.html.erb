<% @notices.each do |notice| %>
  <% if notice.is_sticky %>
    <fieldset class="sticky", title= "<%= "Posted on #{notice.start_time.to_date} at #{notice.start_time.to_s(:am_pm)}" %>" >
        <div class="right">
        <%= link_to '[x]', { :action => 'destroy', :id => notice },
          :confirm => "Are you sure you want to trash this sticky? It will be removed for other users as well.",
          :method => :post %>
      </div>
      <%= notice.content %>
    <br />
  <div class="grayleft">
    <%= "by #{(notice.author.name )} #{distance_of_time_in_words(notice.start_time, Time.now, true)} ago" %>
  </div>
  <div class="grayright">
    <%= notice.auth_full_list %>
  </div>
    </fieldset>

<% end %>


  <% end %>

