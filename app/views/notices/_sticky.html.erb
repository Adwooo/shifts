  <% if sticky.is_sticky %>
    <fieldset class="sticky", title= "<%= "Posted on #{sticky.start_time.to_date} at #{sticky.start_time.to_s(:am_pm)}" %>" >
        <div class="right">
        <%= link_to '[x]', { :action => 'destroy', :id => sticky },
          :confirm => "Are you sure you want to trash this sticky? It will be removed for other users as well.",
          :method => :delete %>
      </div>
      <%= sticky.content %>
    <br />
  <div class="grayleft">
    <%= "by #{(sticky.author.name )} #{distance_of_time_in_words(sticky.start_time, Time.now, true)} ago" %>
  </div>
  <div class="grayright">
    <%= sticky.display_for %>
  </div>
    </fieldset>

<% end %>

