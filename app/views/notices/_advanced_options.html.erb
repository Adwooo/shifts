<label for="for_users">For users:</label> <br /> <%= tokenized_users_autocomplete(@notice, "user_sources", "for_users") %>
<br/>
For locations: <br />
<ul id = "notice_ul">
  <% if current_user.is_admin_of?(current_department) %>
    <%= check_box_tag :department_wide_locations %>
    <label for="department_wide_locations"><%= current_department.name %></label> (all locations)
  <% end %>

  <% for loc_group in current_department.loc_groups do %>
    <li id = "notice_li">
      <%= check_box_tag "for_location_groups[]", loc_group.id, false, :class => "group", :id => "location_group_#{loc_group.id}" %>
      <%= label_tag "location_group_#{loc_group.id}", text = loc_group.name %>:

      <% for location in loc_group.locations do %>
        <%= check_box_tag "for_locations[]", location.id, false, :id => "location_#{location.id}" %>
        <%= label_tag "location_#{location.id}", text = location.name %>
        <% unless location == loc_group.locations.last %> , <%end%>
      <% end %>
    </li>
  <% end %>
</ul>

