<fieldset class = "index">
<% form_for(@notice) do |f| %>
  <%= f.error_messages %>
  <% if current_user.is_admin_of?(@department) %>
    <p>
      Post as sticky? (start/end time preferences will be ignored)
      <%= f.check_box :is_sticky %>
    </p>
    <p>
      Specify a start time:<br />
      <%= f.datetime_select :start_time %>
    </p>
    <p>
      Specify an end time:<br />
      <%= f.datetime_select :end_time %> <br /> or check here to make it indefinite:
      <%= check_box_tag :indefinite -%>
    </p>
  <% end %>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content, :size => "80x10" %>
  </p>
  <span id ="advanced_link" style="display:none">
    <%= link_toggle "advanced_options_div", "Show/hide advanced options", "fast" %>
  </span>
  <div id="advanced_options_div">
    <%= render :partial => 'advanced_options'%>
  </div>
</fieldset>

<p>
  <%= f.submit 'Save',:onclick => 'self.parent.tb_remove()' %>
</p>

<% end %>

<%= observe_form 'form', :url => {:action => 'update_checkboxes'}, :frequency => 0.5 %>

<script type="text/javascript" charset="utf-8">
    $("#advanced_options_div").hide();
    $("#advanced_link").show();
</script>

