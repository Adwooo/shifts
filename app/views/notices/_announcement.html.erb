<% if !announcement.is_sticky? %>
<fieldset class="announcement", title= "<%= "Posted on #{announcement.start_time.to_date} at #{announcement.start_time.to_s(:am_pm)}" %>" >
  <% if current_user.is_admin_of?(@department) %>
      <div class="right">
        <%= link_to '[x]', { :action => 'destroy', :id => announcement },
          :confirm => "Are you sure you want to trash this announcement? It will be removed for other users as well.",
          :method => :post %>
      </div>
      <div class="grayright">
        <%= link_to 'Edit', edit_notice_path(announcement) %>
      </div>
  <% end %>
  <%= announcement.content %>

<br />
<div class="grayleft">
    <%= "by #{(announcement.author.name )}" -%>
</div>
  </fieldset>
  <% end %>

