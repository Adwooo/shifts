<% title "New Notice" %>

<% form_for(@notice) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :id %><br />
    <%= f.text_field :id %>
  </p>
  <p>
    <%= f.label :is_sticky %><br />
    <%= f.check_box :is_sticky %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_field :content %>
  </p>
  <p>
    <%= f.label :author_id %><br />
    <%= f.text_field :author_id %>
  </p>
  <p>
    <%= f.label :start_time %><br />
    <%= f.datetime_select :start_time %>
  </p>
  <p>
    <%= f.label :end_time %><br />
    <%= f.datetime_select :end_time %>
  </p>
  <p>
    <%= f.label :for_users %><br />
    <%= f.text_field :for_users %>
  </p>
  <p>
    <%= f.label :for_locations %><br />
    <%= f.text_field :for_locations %>
  </p>
  <p>
    <%= f.label :for_location_groups %><br />
    <%= f.text_field :for_location_groups %>
  </p>
  <p>
    <%= f.label :for_departments %><br />
    <%= f.text_field :for_departments %>
  </p>
  <p>
    <%= f.label :remover_id %><br />
    <%= f.text_field :remover_id %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', notices_path %>

