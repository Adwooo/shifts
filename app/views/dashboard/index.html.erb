<% title "Welcome #{current_user.name}" %>

<% unless current_user.notices.empty? %>
  <fieldset class ="index">
    <legend>Notices for you</legend>
    <%= render :partial => 'notices/for_you' %>
  </fieldset>
<% end %>

<% if current_user.punch_clock %>
<%= link_to "Clock out of your current shift?", current_user.punch_clock, 
                                :confirm => "Are you sure", 
                                :method => :delete %>
<% else %>
<%= link_to "Clock in to a shift?", new_user_punch_clock_path(current_user.id) %>
<% end %>
<%= render :partial => 'shifts/upcoming_shifts_layout' %>
