<% title "Welcome #{current_user.name}" %>

<% unless current_user.notices.empty? %>
  <fieldset class ="index">
    <legend>Notices for you</legend>
    <%= render :partial => 'notices/for_you' %>
  </fieldset>
  <br/>
<% end %>

<fieldset class = "index">
  <legend>Current shifts</legend>
  <%= return_to_shift_report_if_needed %>
  <% if current_user.punch_clock %>
    <%= link_to "Clock out?",  current_user.punch_clock, :message => "Are you sure",
                                                         :method => :delete %>
  <% else %>
    <%= link_to "Clock in?", {:controller => "punch_clocks",
                              :action => :new },
                              :method => :create %>
  <% end %>
</fieldset>

<% unless @upcoming_shifts.empty? %>
  <br/>
  <fieldset class ="index">
    <legend>Upcoming shifts</legend>
    <%= render :partial => 'shifts/upcoming_shifts_layout' %>
    </fieldset>
<% end %>

