<table id="stats_table" class="tablesorter">
  <thead>
    <tr>
      <th align="left">Location</th>
      <th align="left">Start Time</th>
      <th align="left">End Time</th>
      <th align="left">Notes</th>
			<th align="left">Updates/Hour</th>
    </tr>
  </thead>
	<tbody>
		<% @stats_hash.each do |shift_id, stat_entry| %>
			<tr>
				<td><%=h stat_entry[:location] %></td>
				<td><%=h stat_entry[:start] %></td>
				<td><%=h stat_entry[:end] %></td>
				<td><%=h stat_entry[:notes] %></td>
				<td><%=h stat_entry[:updates_hour] %></td>
			</tr>
		<% end %>
	</tbody>
</table>