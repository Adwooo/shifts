<h1>New Shift Preferences</h1>

<% form_for(@shift_preference) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :max_total_hours %>: 
    <%= select_tag 'shift_preference[max_total_hours]', options_for_select(@hours_week, @hours_week.min) %>
  </p>
  <p>
    <%= f.label :min_total_hours %>: 
    <%= select_tag 'shift_preference[min_total_hours]', options_for_select(@hours_week, @hours_week.min) %>
  </p>
  <p>
    <%= f.label :max_continuous_hours %>: 
    <%= select_tag 'shift_preference[max_continuous_hours]', options_for_select(@hours_shift, @hours_shift.min) %>
  </p>
  <p>
    <%= f.label :min_continuous_hours %>: 
    <%= select_tag 'shift_preference[min_continuous_hours]', options_for_select(@hours_shift, @hours_shift.min) %>
  </p>
  <p>
    <%= f.label :max_number_of_shifts %>: 
    <%= select_tag 'shift_preference[max_number_of_shifts]', options_for_select(@shifts_week, @shifts_week.min) %>
  </p>
  <p>
    <%= f.label :min_number_of_shifts %>: 
    <%= select_tag 'shift_preference[min_number_of_shifts]', options_for_select(@shifts_week, @shifts_week.min) %>
  </p>
  <p>
    <%= f.label :max_hours_per_day %>: 
    <%= select_tag 'shift_preference[max_hours_per_day]', options_for_select(@hours_shift, @hours_shift.min) %>
  </p>
	<p>
		
	</p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', shift_preferences_path %>