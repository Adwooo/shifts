<% if @sticky.errors.empty? %>
  <% if @in_shift %>
    $('#message_center').html("<%= escape_javascript render partial: 'notices/notice', collection: current_user.current_shift.report.get_notices, locals: {html_class: 'report_notice'}%>");
  <% end %>
  $('#all_notices').html("<%= escape_javascript render partial: 'notices/all_notices'%>");
  <% if session[:mobile_param] !='1' %>
    tb_remove();
    tb_init('a#edit');
  <% end %>
  $('#flash').html("<%= escape_javascript render partial: 'layouts/flash', locals: {flash: flash} %>");
  <% flash.discard %>
  <% if session[:mobile_param] =='1' %>
    <% if @in_shift %>
      window.location = "<%= url_for(controller: 'reports', action: 'show', id: @current_shift.report.id) %>";
    <% else %>
      window.location = "<%= url_for(controller: 'dashboard', action: 'index')%>";
    <% end %>
  <% end %>
<% else %>
  $('#errors').html("<%= escape_javascript render partial: 'notices/error_messages' %>");
<% end %>
