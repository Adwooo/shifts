<% title "Payform" %>
<div id="cols">
  <div id="cols-header"><%= error_messages_for 'payform' %></div>
  <div id="left-col">
    <%= render :partial => 'date_select', :locals => {:date => @payform.date } %>
    <%= link_to "View all past payforms", payforms_path %>
  </div>

  <%#= render :partial => 'punch_clock' %>
</div>

<br />

<div id="payform_status">
  <%#= render :partial => 'payform/payform_status', :object => @payform %>
</div>
<br /><br />

<div id="payform">
  <%#= render :partial => "payform/payform" %>

  <div id="add_job_div" style="display: none"></div>


  <div id="add_job_link_div">
    <%= link_to "New Payform Item", new_payform_payform_item_path(@payform), :class => "add_job_link"%>
  </div>
  <h1>Hours</h1>
  <table id="payformList" width="100%">
    <!-- categories -->

  <%= render :partial => "category",
         :collection => (@payform.department.categories),
         :locals => {:miscellaneous => false} %>

    <!-- end categories -->

    <!-- miscellaneous categories -->
  <%= render :partial => "category",
       :locals => {:miscellaneous => true} %>
    <!-- end miscellaneous -->
  </table>
  <br/>
  <center>
    <div id="payform-total" align="center">
      Total Hours: <%#= @payform.total_hours %><br/>
    </div>
    <div style="color:SlateGrey">(Hours rounded up to nearest quarter hour increment)</div>
  </center>

  <div id="buttons">
    <%#= render :partial => "payform/payform_button" %>
  </div>


<table>
  <tr>
    <th>Hours</th>
    <th>Description</th>
  </tr>
  <% for payform_item in @payform.payform_items %>
    <tr>
      <td><%=h payform_item.hours %></td>
      <td><%=h payform_item.description %></td>
      <td><%= link_to "Edit", edit_payform_item_path(payform_item) %></td>
      <td><%= link_to "Destroy", payform_item, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

</div>

