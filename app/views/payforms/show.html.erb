<% title "Payform for " + @payform.date.strftime('%B %d, %Y')%>
<div id="cols">
  <div id="cols-header"><%= error_messages_for 'payform' %></div>
  <div id="left-col">
    <%= render :partial => 'date_select', :locals => {:date => @payform.date } %>
    <%= link_to "View all past payforms", payforms_path %>
  </div>
  <div id="right-col">
     Right Column
  </div>
  <div id="middle-col">
    Middle Column
  </div>
  <div id="cols-footer">
    Column Footer
  </div>
</div>

<br />

<div id="payform_status">
  <%#= render :partial => 'payform/payform_status', :object => @payform %>
</div>

<div id="payform">
  <%#= render :partial => "payform/payform" %>

  <div id="add_job_div" style="display: none"></div>


  <div id="add_job_link_div">
    <%= link_to "New Payform Item", new_payform_payform_item_path(@payform), :class => "add_job_link"%>
  </div>
  <h1>Payform Items</h1>

    <%= render :partial => "category", :collection => (@payform.department.categories) %>

  <br/>
  <center>
    <div id="payform-total" align="center">
      Total Hours: <%#= @payform.total_hours %><br/>
    </div>
    <div style="color:SlateGrey">(Hours rounded up to nearest quarter hour increment)</div>
  </center>

  <div id="buttons">
    <%#= render :partial => "payform/payform_button" %>
  </div>

</div>

