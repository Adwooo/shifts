<% form_for user do |f| %>
  <%= f.error_messages %>

  <% if $user_editable_logins %>
  <p>
    <%= f.label :login %><br />
    <%= f.text_field :login %>
  </p>
  <% end %>
  <p>
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name %>
  </p>
  <p>
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name %>
  </p>
  <p>
    <%= f.label :nick_name %><br />
    <%= f.text_field :nick_name %>
  </p>
  <p>
    <%= f.label :employee_id %><br />
    <%= f.text_field :employee_id %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <% if @user.auth_type == "authlogic"%>
    <p><%= render :file => "password_resets/edit.html.erb" %></p>
  <% end %>
  <p><%= f.submit submit %></p>
<% end %>

