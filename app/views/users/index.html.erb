<% title "Users" %>

<table>
  <tr>
    <th>Netid</th>
    <th>Name</th>
    <th>Active</th>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Email</th>
    <th>Ein</th>
  </tr>
  <% for user in @users %>
    <tr>
      <td><%=h user.netid %></td>
      <td><%=h user.name %></td>
      <td><%=h user.active %></td>
      <td><%=h user.first_name %></td>
      <td><%=h user.last_name %></td>
      <td><%=h user.email %></td>
      <td><%=h user.ein %></td>
      <td><%= link_to "Show", user %></td>
      <td><%= link_to "Edit", edit_user_path(user) %></td>
      <td><%= link_to "Destroy", user, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New User", new_department_user_path(@department) %></p>

